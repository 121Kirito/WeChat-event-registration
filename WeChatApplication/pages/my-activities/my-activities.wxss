/** my-activities.wxss - 我的活动页面样式 **/
page {
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 统计信息区域 */
.stats-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stats-card {
  display: flex;
  justify-content: space-around;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  font-size: 26rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
  border-radius: 20rpx;
  margin: 0 5rpx;
}

.tab-item.active {
  color: #007aff;
  font-weight: bold;
  background-color: #e6f7ff;
}

.tab-item:active {
  background-color: #f0f0f0;
}

.tab-item.active:active {
  background-color: #d6f0ff;
}

/* 活动列表 */
.activities-list {
  flex: 1;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 活动项 */
.activity-item {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

/* 状态徽章 */
.status-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  z-index: 2;
}

.status-badge.upcoming {
  background-color: #1890ff;
  color: #fff;
}

.status-badge.ongoing {
  background-color: #52c41a;
  color: #fff;
}

.status-badge.completed {
  background-color: #722ed1;
  color: #fff;
}

.status-badge.cancelled {
  background-color: #d9d9d9;
  color: #666;
}

/* 活动内容 */
.activity-content {
  display: flex;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.activity-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.activity-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.activity-date {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

.activity-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #999;
}

.registration-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.register-time {
  font-size: 22rpx;
  color: #999;
}

.register-status {
  font-size: 22rpx;
  color: #52c41a;
  font-weight: bold;
}

/* 操作按钮 */
.activity-actions {
  display: flex;
  padding: 0 30rpx 30rpx;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  border: none;
  transition: all 0.3s;

  display: flex;           /* flex布局 */
  align-items: center;     /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}

.action-btn.primary {
  background-color: #007aff;
  color: #fff;
}

.action-btn.secondary {
  background-color: #f0f0f0;
  color: #666;
}

.action-btn.danger {
  background-color: #ff4d4f;
  color: #fff;
}

.action-btn:active {
  opacity: 0.8;
}

/* 加载状态 */
.loading,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

.loading {
  color: #007aff;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 80%;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx;
  text-align: center;
}

.modal-message {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.modal-warning {
  font-size: 24rpx;
  color: #ff6b35;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #e5e5e5;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 100rpx;
  font-size: 30rpx;
  border: none;
  border-radius: 0;

  display: flex;           /* flex布局 */
  align-items: center;     /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border-right: 1rpx solid #e5e5e5;
}

.confirm-btn {
  background-color: #ff4d4f;
  color: #fff;
}

.cancel-btn:active {
  background-color: #e5e5e5;
}

.confirm-btn:active {
  background-color: #d9363e;
}
