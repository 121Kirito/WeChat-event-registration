/**index.wxss - 活动列表首页样式**/
page {
  background-color: #f5f5f5;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh; /* 避免 flex 子元素高度塌陷 */
  background-color: #f5f5f5;
}

.banner-swiper {
  width: 100%;
  height: 270rpx; /* 必须有明确高度 */
  flex-shrink: 0; /* 避免被父容器压缩 */
}

.banner-image {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 50rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #999;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  background-color: #007aff;
  color: #fff;
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border: none;
}

/* 筛选栏样式 */
.filter-bar {
  background-color: #fff;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.sort-options {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.sort-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.sort-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
  border: 1rpx solid #e5e5e5;
}

.sort-item.active {
  background-color: #007aff;
  color: #fff;
  border-color: #007aff;
}

.sort-item:active {
  transform: scale(0.95);
}

/* 筛选功能样式 */
.filter-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.filter-section {
  display: flex;
  align-items: center;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  min-width: 80rpx;
}

.filter-scroll {
  flex: 1;
  white-space: nowrap;
}

.filter-items {
  display: flex;
  gap: 15rpx;
  padding: 5rpx 0;
}

.filter-item {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 20rpx;
  border-radius: 25rpx;
  transition: all 0.3s;
  border: 1rpx solid #e5e5e5;
  background-color: #f8f8f8;
  white-space: nowrap;
  flex-shrink: 0;
}

.filter-item.active {
  background-color: #007aff;
  color: #fff;
  border-color: #007aff;
}

.filter-item:active {
  transform: scale(0.95);
}

/* 下拉框样式 */
.filter-picker {
  flex: 1;
  margin-left: 20rpx;
}

.picker-text {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 20rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #e5e5e5;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
  min-height: 50rpx;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 活动列表样式 */
.activity-list {
  flex: 1;
  padding: 20rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 活动卡片样式 */
.activity-card {
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.activity-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.15);
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  z-index: 2;
  background-color: #52c41a;
  color: #fff;
}

.status-tag.active {
  background-color: #52c41a;
  color: #fff;
}

.status-tag.expired {
  background-color: #d9d9d9;
  color: #666;
}

/* 活动图片 */
.activity-image {
  width: 100%;
  height: 300rpx;
  background-color: #f0f0f0;
}

/* 活动信息 */
.activity-info {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.activity-date {
  font-size: 24rpx;
  color: #666;
}

.activity-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 活动底部信息 */
.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.activity-stats,
.activity-deadline {
  display: flex;
  align-items: center;
}

.stat-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #666;
}

/* 活动标签和分类 */
.activity-tags-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.activity-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  flex: 1;
}

.tag {
  background-color: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.activity-category {
  margin-left: 20rpx;
}

.category-text {
  background-color: #007aff;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-weight: bold;
}

/* 加载状态 */
.loading,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

.loading {
  color: #007aff;
}
