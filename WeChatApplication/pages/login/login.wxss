/* login.wxss - 微信登录页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-content {
  width: 100%;
  max-width: 600rpx;
  text-align: center;
}

/* Logo区域 */
.logo-section {
  margin-bottom: 120rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.app-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 登录按钮区域 */
.login-section {
  margin-bottom: 120rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.login-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.login-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.loading-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.login-text {
  font-size: 32rpx;
  font-weight: 600;
}

.login-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 功能介绍 */
.features-section {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  min-width: 150rpx;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.feature-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}
