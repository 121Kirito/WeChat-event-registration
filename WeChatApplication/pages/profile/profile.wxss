/* 整体容器 */
.container {
  position: relative;
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  padding-bottom: 40rpx;
  padding-top: 0;
  box-sizing: border-box;
  /* 确保不被状态栏遮挡 */
  padding-top: env(safe-area-inset-top);
}

/* 顶部用户信息区域 */
.user-header {
  position: relative;
  padding: 120rpx 30rpx 80rpx;
  color: #fff;
  /* overflow: hidden; */
  margin-bottom: 0;
  z-index: 3;
  margin-top: 0;
}

/* 顶部背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 1;
  /* 确保背景覆盖整个区域 */
  min-height: 100%;
}

/* 用户信息 */
.user-info {
  position: relative;
  z-index: 4;
  display: flex;
  align-items: center;
  margin-bottom: 0;
  min-height: 120rpx;
}

/* 头像 */
.avatar-container {
  position: relative;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.avatar-badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  background: linear-gradient(45deg, #ff6b6b, #ffa500);
  color: #fff;
  font-size: 18rpx;
  font-weight: bold;
  z-index: 5;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  border: 2rpx solid #fff;
}

/* 用户详情 */
.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 80rpx; /* 为编辑按钮留出空间 */
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
  gap: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
}

.user-level {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.user-bio {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
  line-height: 1.3;
  max-width: 100%;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.user-meta {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 8rpx;
}

.user-id {
  font-size: 22rpx;
  opacity: 0.8;
}

.user-join-time {
  font-size: 20rpx;
  opacity: 0.7;
}

/* 编辑按钮 */
.edit-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  width: 20rpx; /* 固定宽度，保证按钮统一大小 */
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center; /* 文字在按钮中水平居中 */
  position: absolute;
  top: -10rpx; /* 距离顶部 */
  right: 20rpx; /* 紧贴右边 */
  z-index: 10;
}


.edit-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.edit-icon {
  font-size: 20rpx;
}

/* 以下样式保持原有不变，略去以节省篇幅，可继续使用你的原本 stats-card、quick-actions、menu-section、logout-section、modal 样式 */


/* 统计信息卡片 */
.stats-card {
  background-color: #fff;
  margin: -50rpx 30rpx 30rpx;
  margin-top: 10rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.stats-header {
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 快捷功能 */
.quick-actions {
  display: flex;
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  justify-content: space-around;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 20rpx 10rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
}

.action-icon.create {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
}

.action-icon.my {
  background: linear-gradient(135deg, #f093fb, #f5576c);
  color: #fff;
}

.action-icon.favorite {
  background: linear-gradient(135deg, #ffecd2, #fcb69f);
  color: #ff6b6b;
}

.action-icon.history {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
  color: #667eea;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 功能菜单 */
.menu-section {
  padding: 0 30rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 24rpx;
  margin: 0 0 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.group-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f9fa;
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.menu-icon {
  font-size: 32rpx;
  color: #fff;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.menu-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
  transition: all 0.3s ease;
}

/* 退出登录按钮 */
.logout-section {
  margin: 0 30rpx;
  text-align: center;
}

.logout-btn {
  width: 100%;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(135deg, #ff6b6b 0%, #fcb69f 100%);
  border-radius: 24rpx;
  border: none;
}

/* 编辑资料弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  width: 90%;
  max-height: 90%;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 32rpx;
  cursor: pointer;
}

.modal-body {
  padding: 20rpx 30rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  flex: 1;
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.form-label {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.form-input, .form-textarea {
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  padding: 10rpx 15rpx;
  font-size: 24rpx;
}

.form-textarea {
  min-height: 100rpx;
  resize: none;
}

.avatar-upload {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.upload-avatar {
  width: 100%;
  height: 100%;
}

.upload-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: all 0.3s ease;
}

.avatar-upload:hover .upload-overlay {
  opacity: 1;
}

.upload-text {
  color: #fff;
  font-size: 24rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn {
  flex: 1;
  margin-right: 10rpx;
  padding: 15rpx 0;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.confirm-btn {
  flex: 1;
  margin-left: 10rpx;
  padding: 15rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: #fff;
  font-size: 28rpx;
}
