/**activity-detail.wxss - 活动详情页面样式**/
page {
  background-color: #f5f5f5;
}

.container {
  padding-bottom: 120rpx;
}

/* 活动图片轮播 */
.activity-swiper {
  width: 100%;
  height: 400rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

/* 活动头部信息 */
.activity-header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.activity-title-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  white-space: nowrap;
  background-color: #52c41a;
  color: #fff;
}

.status-tag.active {
  background-color: #52c41a;
  color: #fff;
}

.status-tag.expired {
  background-color: #d9d9d9;
  color: #666;
}

/* 活动元信息 */
.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.meta-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

/* 活动内容 */
.activity-content {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.content-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.content-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
}

/* 活动标签 */
.activity-tags {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.tags-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag {
  background-color: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 报名者列表 */
.participants-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.participants-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.participant-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.participant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #e0e0e0;
}

.participant-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.participant-time {
  font-size: 24rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-info {
  flex: 1;
}

.price-text {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.price-text.free {
  color: #52c41a;
}

.register-btn {
  background-color: #007aff;
  color: #fff;
  border-radius: 50rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  min-width: 200rpx;
}

.register-btn.disabled {
  background-color: #d9d9d9;
  color: #999;
}

.register-btn:not(.disabled):active {
  background-color: #0056cc;
}

/* 报名弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 90%;
  max-height: 80%;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.confirm-info {
  margin-bottom: 40rpx;
}

.confirm-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.confirm-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.confirm-item {
  font-size: 26rpx;
  color: #666;
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.form-input {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
}

.form-textarea {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  min-height: 120rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #e5e5e5;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border-right: 1rpx solid #e5e5e5;
}

.confirm-btn {
  background-color: #007aff;
  color: #fff;
}

.cancel-btn:active {
  background-color: #e5e5e5;
}

.confirm-btn:active {
  background-color: #0056cc;
}